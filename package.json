{
    "name": "jot-cli",
    "version": "0.3.0",
    "module": "src/index.ts",
    "bin": {
        "jot": "src/index.ts"
    },
    "scripts": {
        "check": "biome check . && tsc --noEmit",
        "check:fix": "biome check --write && tsc --noEmit",
        "compile": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/jot",
        "compile:linux": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/jot-linux --target=bun-linux-x64",
        "compile:windows": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/jot-windows --target=bun-windows-x64",
        "compile:macos": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/jot-macos --target=bun-darwin-arm64"
    },
    "type": "module",
    "devDependencies": {
        "@biomejs/biome": "2.3.8",
        "@effect/language-service": "^0.62.4",
        "@total-typescript/ts-reset": "^0.6.1",
        "@total-typescript/tsconfig": "^1.0.4",
        "@tsconfig/bun": "^1.0.10",
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@clack/prompts": "^0.11.0",
        "@effect/cli": "^0.72.1",
        "@effect/platform": "^0.93.8",
        "@effect/platform-bun": "^0.86.0",
        "@openrouter/ai-sdk-provider": "^1.5.4",
        "ai": "^5.0.115",
        "dedent": "^1.7.1",
        "effect": "^3.19.12",
        "ignore": "^7.0.5",
        "marked": "^16.0.0",
        "marked-terminal": "^7.3.0"
    }
}
