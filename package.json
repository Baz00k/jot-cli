{
    "name": "jot-cli",
    "version": "0.5.0",
    "module": "src/index.ts",
    "bin": {
        "jot": "src/index.ts"
    },
    "scripts": {
        "dev": "DEV=true bun run ./src/index.ts",
        "check": "biome check . && tsc --noEmit",
        "check:fix": "biome check --write && tsc --noEmit",
        "compile": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/jot",
        "compile:linux": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/jot-linux --target=bun-linux-x64",
        "compile:windows": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/jot-windows --target=bun-windows-x64",
        "compile:macos": "bun build --compile --minify --sourcemap src/index.ts --outfile bin/jot-macos --target=bun-darwin-arm64"
    },
    "type": "module",
    "dependencies": {
        "@clack/prompts": "^0.11.0",
        "@effect/cli": "^0.73.0",
        "@effect/platform": "^0.94.1",
        "@effect/platform-bun": "^0.87.0",
        "@openauthjs/openauth": "^0.4.3",
        "@openrouter/ai-sdk-provider": "^1.5.4",
        "@opentui-ui/dialog": "^0.0.5",
        "@opentui/core": "^0.1.69",
        "@opentui/react": "^0.1.69",
        "@types/turndown": "^5.0.6",
        "ai": "^6.0.16",
        "cli-highlight": "^2.1.11",
        "dedent": "^1.7.1",
        "effect": "^3.19.14",
        "htmlrewriter": "^0.0.13",
        "ignore": "^7.0.5",
        "marked": "^16.4.2",
        "marked-terminal": "^7.3.0",
        "react": "^19.2.3",
        "turndown": "^7.2.2"
    },
    "devDependencies": {
        "@biomejs/biome": "2.3.11",
        "@effect/language-service": "^0.64.1",
        "@total-typescript/ts-reset": "^0.6.1",
        "@total-typescript/tsconfig": "^1.0.4",
        "@tsconfig/bun": "^1.0.10",
        "@types/bun": "latest",
        "@types/json-schema": "^7.0.15",
        "@types/react": "^19.2.7",
        "react-devtools-core": "^7.0.1"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    }
}
