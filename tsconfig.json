{
    "extends": ["@total-typescript/tsconfig/bundler/no-dom/app", "@tsconfig/bun/tsconfig.json"],
    "compilerOptions": {
        // Cache
        "incremental": true,
        "tsBuildInfoFile": "${configDir}/.cache/tsbuildinfo.json",

        "plugins": [
            {
                "name": "@effect/language-service"
            }
        ],

        "paths": {
            "@/*": ["./src/*"]
        },

        "jsx": "react-jsx",
        "jsxImportSource": "@opentui/react",
        "lib": ["ESNext", "DOM"]
    }
}
